# Installing UFW(Uncomplicated Firewall)
sudo apt install ufw

# Setting ufw to dafault
sudo ufw default deny incoming
sudo ufw default allow outgoing

# Giving access to all ssh
sudo ufw allow 22

# Giving access to all HTTP
sudo ufw allow 80

# Giving access to all HTTPS SSL
sudo ufw allow 443

# Activating ufw
sudo ufw enable

# Checking for ufw status(either active or inactive)
sudo ufw status verbose
